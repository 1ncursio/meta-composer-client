{
  "name": "meta-composer-client",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "adb:reverse": "adb reverse tcp:3000 tcp:3000",
    "generate-css-types": "tailwindcss-classnames",
    "spritesheet": "npm run spritesheet:system-action && npm run spritesheet:system-notice",
    "spritesheet:system-action": "spritesheet-js -f json -p public/assets/images/spritesheets/ --padding 8 --divisibleByTwo -n sprite-system-action-spritesheet --powerOfTwo public/assets/images/sprites/action/*",
    "spritesheet:system-notice": "spritesheet-js -f json -p public/assets/images/spritesheets/ --padding 8 --divisibleByTwo -n sprite-system-notice-spritesheet --powerOfTwo public/assets/images/sprites/notice/*"
  },
  "dependencies": {
    "@belivvr/aframe-react": "^0.3.3",
