    "@react-midi/hooks": "^1.0.2",
    "aframe": "^1.3.0",
    "aframe-geometry-merger-component": "^2.0.0",
    "aframe-html-shader": "^0.2.0",
    "aframe-slice9-component": "^1.0.0",
    "async-mutex": "^0.3.2",
    "axios": "^0.25.0",
    "daisyui": "^2.0.9",
    "dayjs": "^1.10.8",
    "immer": "^9.0.12",
    "jwt-decode": "^3.1.2",
    "midimessage": "^1.0.5",
    "next": "^12.0.10",
    "next-i18next": "^10.3.0",
    "pusher": "^5.0.1",
    "pusher-js": "^7.0.6",
    "react": "17.0.2",
    "react-device-detect": "^2.1.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.27.0",
    "react-icons": "^4.3.1",
    "react-piano": "^3.1.3",
    "react-select": "^5.2.2",
    "sass": "^1.49.8",
    "simple-peer": "^9.11.0",
    "socket.io-client": "^4.4.1",
    "soundfont-player": "^0.12.0",
    "swr": "^1.1.2",
    "tailwindcss-classnames": "^3.0.2",
    "theme-change": "^2.0.2",
    "three": "^0.137.5",
    "vexflow": "^3.0.9",
    "zustand": "^3.7.0"
  },
  "devDependencies": {
