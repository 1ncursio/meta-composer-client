    "@types/simple-peer": "^9.11.4",
    "@types/three": "^0.137.0",
    "@types/vexflow": "^1.2.37",
    "@types/webmidi": "^2.0.6",
    "autoprefixer": "^10.4.2",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "msw": "^0.39.1",
    "postcss": "^8.4.5",
    "simple-zustand-devtools": "^1.0.1",
    "tailwindcss": "^3.0.15",
    "typescript": "4.5.4"
